<div class="container">
  <div class="row d-flex">
    <div class="show-card col-lg-5 mr-3">
      <div class="title mb-2">
        Qu'avez-vous pens√© de votre location ? <br>Donnez-nous votre avis !
      </div>
      <div class="simple_form_for">
      <%= simple_form_for [@statue, @review] do |f| %>
        <%= f.input :content, label: "Commentaire" %>
        <%= f.input :stars, collection: (1..5).to_a, label: "Note ta location" %>
        <%= f.submit "Envoyer mon avis", class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
    <div class="show-card col-xs-12 col-lg-6">
      <div class="title mb-3"><%= @statue.name %></div>
      <div id="price" class='d.none' data-price="<%= @statue.price %>"></div>
      <%= cl_image_tag @statue.photo, class: 'show_img_rental' %>
    </div>
  </div>
</div>
