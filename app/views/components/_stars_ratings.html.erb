<div class="container-reviews">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for @review do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Note ta location" %>
        <%= f.submit "Envoyer mon avis" %>
      <% end %>
    </div>
  </div>
</div>
